{{>layout/header}}

<div id="container">
    <div class="wrapper">
        <div class="search">
            <div class="title-area">
                <div class="top-area">
                    <a class="location" href="/"><img class="icon" src="/images/app/home.png" alt="HOME"></a>
                    <span class="location">검색</span>
                    <span class="location">전체</span>
                </div>
            </div>
            <div class="content-area">
                <div class="search-area">
                    <input type="search" name="keywords" placeholder="검색어를 입력하세요." value="{{keywords}}">
                    <button type="button" class="btn-search" name="btn-search"></button>
                </div>
                <ul>
                    <li>
                        <a style="background-color: #C1DAC0;" href="/search?keywords={{keywords}}">전체</a></li><li>
                    <a href="/search/posts?keywords={{keywords}}&searchBy=title+content">게시글</a></li><li>
                    <a href="/search/comments?keywords={{keywords}}">댓글</a></li><li>
                    <a href="/search/users?keywords={{keywords}}">사용자</a></li>
                </ul>
            </div>
            <div class="results-area">
                <div class="posts-area">
                    <div class="title">
                        <h2>게시글</h2>
                        {{#postsMore}}<a class="more" href="/search/posts?keywords={{keywords}}&searchBy=title+content">더 보기<img></a>{{/postsMore}}
                    </div>
                    <table>
                        <tbody>
                        {{^posts.content}}
                            <tr>
                                <td class="no-content">검색된 게시글이 없어요.</td>
                            </tr>
                        {{/posts.content}}
                        {{#posts.content}}
                            <tr>
                                <td>
                                    <div class="tit">
                                        <a href="/posts/read/{{id}}">{{title}}</a>
                                    </div>
                                    <a href="/posts/read/{{id}}"><pre>{{content}}</pre></a>
                                    <span class="date">{{author}} | {{modifiedDate}} | <img class="view"> {{view}} | <img class="cmt"> {{comments}} | <img class="like"> {{likes}}</span>
                                </td>
                            </tr>
                        {{/posts.content}}
                        </tbody>
                    </table>
                </div>
                <div class="comments-area">
                    <div class="title">
                        <h2>댓글</h2>
                        {{#commentsMore}}<a class="more" href="/search/comments?keywords={{keywords}}">더 보기<img></a>{{/commentsMore}}
                    </div>
                    <table>
                        <tbody>
                        {{^comments.content}}
                            <tr>
                                <td class="no-content">검색된 댓글이 없어요.</td>
                            </tr>
                        {{/comments.content}}
                        {{#comments.content}}
                            <tr>
                                <td>
                                    <a href="/posts/read/{{postsId}}#cmt-{{commentsId}}"><pre>{{content}}</pre></a>
                                    <span class="date">{{author}} | {{modifiedDate}} | <img class="like"> {{likes}}</span>
                                    <div class="tit">
                                        <a href="/posts/read/{{postsId}}">{{title}}</a>
                                    </div>
                                </td>
                            </tr>
                        {{/comments.content}}
                        </tbody>
                    </table>
                </div>
                <div class="users-area">
                    <div class="title">
                        <h2>사용자</h2>
                        {{#usersMore}}<a class="more" href="/search/users?keywords={{keywords}}">더 보기<img></a>{{/usersMore}}
                    </div>
                    <table>
                        <tbody>
                        {{^users.content}}
                            <tr>
                                <td class="no-content">검색된 사용자가 없어요.</td>
                            </tr>
                        {{/users.content}}
                        {{#users.content}}
                            <tr>
                                <td>
                                    <a href="/users/activity-history/posts/{{id}}">{{nickname}}</a>
                                </td>
                            </tr>
                        {{/users.content}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}}
</body>
</html>