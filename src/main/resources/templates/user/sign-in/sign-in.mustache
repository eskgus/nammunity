{{>layout/header}}

<div id="container">
    <div class="wrapper">
        <div class="sign-in">
            <div class="title-area">
                <div class="top-area">
                    <h1 class="title">로그인</h1>
                </div>
            </div>
            <form class="form-area" action="sign-in" method="post">
                <div>
                    <input type="text" id="i-username" name="username" placeholder="ID">
                </div>
                <div>
                    <input type="password" id="i-password" name="password" placeholder="비밀번호">
                </div>
                <div style="width: 314px">
                    {{#message}}
                        <p class="check">{{message}}</p>
                    {{/message}}
                </div>
                <div class="btn-area">
                    <button type="submit" class="btn" id="btn-sign-in">로그인</button>
                    <div class="t-margin">
                        <span class="btns"><a role="button" class="link" href="{{prePage}}">돌아가기</a></span>
                        <span class="btns"><a role="button" class="link" href="/users/find/username">ID 찾기</a></span>
                        <span class="btns"><a role="button" class="link" href="/users/find/password">비밀번호 찾기</a></span>
                        <span class="btns"><a role="button" class="link" href="/users/sign-up">회원가입</a></span>
                    </div>
                    <div class="t-margin">
                        <div class="social">SNS 간편 로그인</div>
                        <a role="button" class="social-btn" href="/oauth2/authorization/google">
                            <img src="/images/app/google.png" alt="구글 로그인"></a>
                        <a role="button" class="social-btn" href="/oauth2/authorization/naver">
                            <img src="/images/app/naver.png" alt="네이버 로그인"></a>
                        <a role="button" class="social-btn" href="/oauth2/authorization/kakao">
                            <img src="/images/app/kakao.png" alt="카카오 로그인"></a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{>layout/footer}}
<script type="module" src="/js/app/users.js"></script>
</body>
</html>