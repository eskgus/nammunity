{{>layout/header}}

<div id="container">
    <div class="wrapper">
        <div class="my-page">
            <div class="title-area">
                <div class="top-area">
                    <a class="location" href="/"><img class="icon" src="/images/app/home.png" alt="HOME"></a>
                    <a class="location" href="/users/my-page">마이 페이지</a>
                    <span class="location">나의 활동</span>
                    <a class="location" href="/users/my-page/comments">작성 댓글</a>
                </div>
            </div>
            <div class="content-area">
                {{>layout/my-page-nav}}
                <div class="my-activity-area">
                    <div class="comments-area">
                        <h2>작성 댓글</h2>
                        <div class="checkbox-area">
                            <input type="checkbox" id="select-all"><label><a id="btn-delete-comments">삭제</a></label>
                        </div>
                        <table>
                            <thead>
                            <tr>
                                <th class="no">번호</th>
                                <th class="cmt">댓글</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{^comments}}
                                <tr>
                                    <td class="no-content" colspan="2">작성한 댓글이 없어요.</td>
                                </tr>
                            {{/comments}}
                            {{#comments}}
                                <tr>
                                    <td><input type="checkbox"><label>{{commentsId}}</label></td>
                                    <td>
                                        <a href="/posts/read/{{postsId}}#cmt-{{commentsId}}"><pre>{{content}}</pre></a>
                                        <span class="date">{{modifiedDate}} | <img class="like"> {{likes}}</span>
                                        <div class="tit">
                                            <a href="/posts/read/{{postsId}}">{{title}}</a>
                                        </div>
                                    </td>
                                </tr>
                            {{/comments}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}}
<script src="/js/app/my-page.js"></script>
</body>
</html>