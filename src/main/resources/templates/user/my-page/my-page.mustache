{{>layout/header}}

<div id="container">
    <div class="wrapper">
        <div class="my-page">
            <div class="title-area">
                <div class="top-area">
                    <a class="location" href="/"><img class="icon" src="/images/app/home.png" alt="HOME"></a>
                    <a class="location" href="/users/my-page">마이 페이지</a>
                </div>
            </div>
            <div class="content-area">
                {{>layout/my-page-nav}}
                <div class="my-activity-area">
                    <div class="posts-area">
                        <div class="title">
                            <h2>작성 글</h2>
                            {{#postsMore}}<a class="more" href="/users/my-page/posts">더 보기<img></a>{{/postsMore}}
                        </div>
                        <table>
                            <thead>
                            <tr>
                                <th class="no">번호</th>
                                <th class="post">게시글</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{^posts.content}}
                                <tr>
                                    <td class="no-content" colspan="2">작성한 글이 없어요.</td>
                                </tr>
                            {{/posts.content}}
                            {{#posts.content}}
                                <tr>
                                    <td class="no-checkbox">{{id}}</td>
                                    <td>
                                        <div class="tit">
                                            <a href="/posts/read/{{id}}">{{title}}</a>
                                        </div>
                                        <span class="date">{{modifiedDate}} | <img class="view"> {{view}} | <img class="cmt"> {{comments}} | <img class="like"> {{likes}}</span>
                                    </td>
                                </tr>
                            {{/posts.content}}
                            </tbody>
                        </table>
                    </div>
                    <div class="comments-area">
                        <div class="title">
                            <h2>작성 댓글</h2>
                            {{#commentsMore}}<a class="more" href="/users/my-page/comments">더 보기<img></a>{{/commentsMore}}
                        </div>
                        <table>
                            <thead>
                            <tr>
                                <th class="no">번호</th>
                                <th class="cmt">댓글</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{^comments.content}}
                                <tr>
                                    <td class="no-content" colspan="2">작성한 댓글이 없어요.</td>
                                </tr>
                            {{/comments.content}}
                            {{#comments.content}}
                                <tr>
                                    <td class="no-checkbox">{{commentsId}}</td>
                                    <td>
                                        <a href="/posts/read/{{postsId}}#cmt-{{commentsId}}"><pre>{{content}}</pre></a>
                                        <span class="date">{{modifiedDate}} | <img class="like"> {{likes}}</span>
                                        <div class="tit">
                                            <a href="/posts/read/{{postsId}}">{{title}}</a>
                                        </div>
                                    </td>
                                </tr>
                            {{/comments.content}}
                            </tbody>
                        </table>
                    </div>
                    <div id="likes-area">
                        <div class="title">
                            <h2>좋아요</h2>
                            {{#likesMore}}<a class="more" href="/users/my-page/likes">더 보기<img></a>{{/likesMore}}
                        </div>
                        <table>
                            <thead>
                            <tr>
                                <th class="no">번호</th>
                                <th class="like">좋아요</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{^likes.content}}
                                <tr>
                                    <td class="no-content" colspan="2">좋아요한 게시글/댓글이 없어요.</td>
                                </tr>
                            {{/likes.content}}
                            {{#likes.content}}
                                {{#isCommentLikes}}
                                    <tr class="comments-area">
                                        <td class="no-checkbox">{{likesId}}</td>
                                        <td>
                                            <a href="/posts/read/{{postsId}}#cmt-{{commentsId}}"><pre>{{content}}</pre></a>
                                            <span class="date">{{author}} | {{createdDate}}</span>
                                            <div class="tit">
                                                <a href="/posts/read/{{postsId}}">{{title}}</a>
                                            </div>
                                        </td>
                                    </tr>
                                {{/isCommentLikes}}
                                {{^isCommentLikes}}
                                    <tr class="posts-area">
                                        <td class="no-checkbox">{{likesId}}</td>
                                        <td>
                                            <div class="tit">
                                                <a href="/posts/read/{{postsId}}">{{title}}</a>
                                            </div>
                                            <span class="date">{{author}} | {{createdDate}}</span>
                                        </td>
                                    </tr>
                                {{/isCommentLikes}}
                            {{/likes.content}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}}
</body>
</html>