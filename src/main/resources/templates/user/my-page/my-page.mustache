{{>layout/header}}

<div id="container">
    <div class="wrapper">
        <div class="my-page">
            <div class="title-area">
                <div class="top-area">
                    <a class="location" href="/"><img class="icon" src="/images/app/home.png" alt="HOME"></a>
                    <a class="location" href="/users/my-page">마이 페이지</a>
                </div>
            </div>
            <div class="content-area">
                {{>layout/my-page-nav}}
                <div class="my-activity-area">
                    {{#contentsPages}}
                    <div class="posts-area">
                        {{#contentsPageMore1}}
                        <div class="title">
                            <h2>작성 글</h2>
                            {{#more}}<a class="more" href="/users/my-page/posts">더 보기<img></a>{{/more}}
                        </div>
                        <table>
                            <thead>
                            <tr>
                                <th class="no">번호</th>
                                <th class="post">게시글</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{^contents.content}}
                                <tr>
                                    <td class="no-content" colspan="2">작성한 글이 없어요.</td>
                                </tr>
                            {{/contents.content}}
                            {{#contents.content}}
                                <tr>
                                    <td class="no-checkbox">{{id}}</td>
                                    <td>
                                        <div class="tit">
                                            <a href="/posts/read/{{id}}">{{title}}</a>
                                        </div>
                                        <span class="date">{{modifiedDate}} | <img class="view"> {{view}} | <img class="cmt"> {{comments}} | <img class="like"> {{likes}}</span>
                                    </td>
                                </tr>
                            {{/contents.content}}
                            </tbody>
                        </table>
                        {{/contentsPageMore1}}
                    </div>
                    <div class="comments-area">
                        {{#contentsPageMore2}}
                        <div class="title">
                            <h2>작성 댓글</h2>
                            {{#more}}<a class="more" href="/users/my-page/comments">더 보기<img></a>{{/more}}
                        </div>
                        <table>
                            <thead>
                            <tr>
                                <th class="no">번호</th>
                                <th class="cmt">댓글</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{^contents.content}}
                                <tr>
                                    <td class="no-content" colspan="2">작성한 댓글이 없어요.</td>
                                </tr>
                            {{/contents.content}}
                            {{#contents.content}}
                                <tr>
                                    <td class="no-checkbox">{{commentsId}}</td>
                                    <td>
                                        <a href="/posts/read/{{postsId}}#cmt-{{commentsId}}"><pre>{{content}}</pre></a>
                                        <span class="date">{{modifiedDate}} | <img class="like"> {{likes}}</span>
                                        <div class="tit">
                                            <a href="/posts/read/{{postsId}}">{{title}}</a>
                                        </div>
                                    </td>
                                </tr>
                            {{/contents.content}}
                            </tbody>
                        </table>
                        {{/contentsPageMore2}}
                    </div>
                    <div id="likes-area">
                        {{#contentsPageMore3}}
                        <div class="title">
                            <h2>좋아요</h2>
                            {{#more}}<a class="more" href="/users/my-page/likes">더 보기<img></a>{{/more}}
                        </div>
                        <table>
                            <thead>
                            <tr>
                                <th class="no">번호</th>
                                <th class="like">좋아요</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{^contents.content}}
                                <tr>
                                    <td class="no-content" colspan="2">좋아요한 게시글/댓글이 없어요.</td>
                                </tr>
                            {{/contents.content}}
                            {{#contents.content}}
                                {{#isCommentLikes}}
                                    <tr class="comments-area">
                                        <td class="no-checkbox">{{likesId}}</td>
                                        <td>
                                            <a href="/posts/read/{{postsId}}#cmt-{{commentsId}}"><pre>{{content}}</pre></a>
                                            <span class="date">{{author}} | {{createdDate}}</span>
                                            <div class="tit">
                                                <a href="/posts/read/{{postsId}}">{{title}}</a>
                                            </div>
                                        </td>
                                    </tr>
                                {{/isCommentLikes}}
                                {{^isCommentLikes}}
                                    <tr class="posts-area">
                                        <td class="no-checkbox">{{likesId}}</td>
                                        <td>
                                            <div class="tit">
                                                <a href="/posts/read/{{postsId}}">{{title}}</a>
                                            </div>
                                            <span class="date">{{author}} | {{createdDate}}</span>
                                        </td>
                                    </tr>
                                {{/isCommentLikes}}
                            {{/contents.content}}
                            </tbody>
                        </table>
                        {{/contentsPageMore3}}
                    </div>
                    {{/contentsPages}}
                </div>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}}
</body>
</html>