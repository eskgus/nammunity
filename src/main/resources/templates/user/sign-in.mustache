{{>layout/header}}
    <h1>로그인</h1>
    <div class="col-md-12">
        <div class="col-md-4">
            <form action="sign-in" method="post">
                {{#message}}
                    <div id="sign-in-failed" style="color: red">
                        {{message}}
                    </div>
                {{/message}}
                <div class="form-group">
                    <label for="username">ID</label>
                    <input type="text" class="form-control" id="i-username" name="username">
                </div>
                <div class="form-group">
                    <label for="password">비밀번호</label>
                    <input type="password" class="form-control" id="i-password" name="password">
                </div>
                <div class="form-actions">
                    <a href="/" role="button" class="btn btn-secondary">취소</a>
                    <button type="submit" class="btn btn-primary" id="btn-sign-in">로그인</button>
                </div>
            </form>
        </div>
    </div>
{{>layout/footer}}