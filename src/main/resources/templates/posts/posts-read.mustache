{{>layout/header}}

<div id="container">
    <div class="wrapper">
        <div class="read">
            {{#post}}
                <input type="hidden" id="id" value="{{id}}">
                <div class="title-area">
                    <div class="top-area">
                        <span class="date">
                            작성 {{createdDate}}
                            {{#modify}}
                                | 수정 {{modifiedDate}}
                            {{/modify}}
                        </span>
                        <h1 class="title">
                            <span id="title">{{title}}</span>
                        </h1>
                    </div>
                    <div class="btm-area">
                        <div class="author" id="author">{{author}}</div>
                        <div class="view">
                            <span style="padding-left: 10px">조회 수
                                <span style="padding-left: 2px" id="view">{{view}}</span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="content">
                    <article>
                        <pre id="content">{{content}}</pre>
                    </article>
                </div>
            {{/post}}
            <div class="btn-area">
                <a role="button" class="btn" href="/">목록</a>
                <ul class="hidden-btn">
                    <li class="dropdown">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">∙∙∙</a>
                        <ul class="dropdown-menu">
                            {{#author}}
                                <li><a role="button" class="first" href="/posts/update/{{id}}">수정</a></li>
                                <li><a role="button" class="last" href="#" id="btn-delete">삭제</a></li>
                            {{/author}}
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="comments-area">
                <div class="sum-area">
                {{#n}}
                    <span class="sum">댓글 {{n}}개</span>
                {{/n}}
                </div>
                <div class="comments-list">
                {{#comments}}
                    <div id="cmt-{{id}}">
                        <div class="comment">
                            <span class="author">{{author}}</span>
                            {{#auth}}
                            <ul class="btn-area hidden-btn">
                                <li class="dropdown">
                                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">∙∙∙</a>
                                    <ul class="dropdown-menu">
                                        <li><a role="button" class="first" name="btn-cmt-edit" href="#cmt-{{id}}">수정</a></li>
                                        <li><a role="button" class="last" id="btn-delete" name="btn-cmt-delete" href="#">삭제</a></li>
                                    </ul>
                                </li>
                            </ul>
                            {{/auth}}
                            <pre>{{content}}</pre>
                            <span class="date">작성 {{createdDate}}{{#modifiedDate}} | 수정 {{modifiedDate}}{{/modifiedDate}}</span>
                        </div>
                    </div>
                {{/comments}}
                </div>
                <div class="comments-creation">
                    {{#auth}}<span class="author">{{auth}}</span>{{/auth}}
                    <textarea class="cmt-content" id="cmt-content"
                              placeholder={{#auth}}"댓글을 입력하세요."{{/auth}}
                                            {{^auth}}"댓글을 입력하려면 로그인하세요." disabled{{/auth}}
                              rows="4"></textarea>
                    <div class="btn-area">
                        <button type="button" class="btn" id="btn-cmt-save">등록</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/app/comments.js"></script>
{{>layout/footer}}