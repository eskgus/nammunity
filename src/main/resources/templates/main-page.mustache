{{>layout/header}}

<div id="container">
    <div class="wrapper">
        <div class="main">
            <table>
                <tbody>
                {{^posts}}
                    <tr><td class="no-content">글이 없어요.</td></tr>
                {{/posts}}
                {{#posts}}
                    <tr>
                        <td>
                            <div class="tit">
                                <a class="tlink" href="/posts/read/{{id}}">{{title}}</a>
                            </div>
                            <span class="date">{{author}} | {{modifiedDate}} | <img class="view"> {{view}} | <img class="cmt"> {{comments}} | <img class="like"> {{likes}}</span>
                        </td>
                    </tr>
                {{/posts}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{>layout/footer}}
</body>
</html>