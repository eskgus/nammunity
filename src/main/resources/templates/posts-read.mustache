{{>layout/header}}
    <div class="col-md-12">
        <div class="col-md-4">
            <form>
                <div>
                    <input type="hidden" id="id" value="{{post.id}}">
                </div>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" value="{{post.title}}" readonly>
                </div>
                <div class="form-group">
                    <label for="author">작성자</label>
                    <input type="text" class="form-control" id="author" value="{{post.author}}" readonly>
                </div>
                <div class="form-group">
                    <label for="content">내용</label>
                    <input type="text" class="form-control" id="content" value="{{post.content}}" readonly>
                </div>
                <div class="form-group">
                    <label for="createdDate">작성일</label>
                    <input type="text" class="form-control" id="createdDate" value="{{post.createdDate}}" readonly>
                </div>
                <div class="form-group">
                    <label for="modifiedDate">수정일</label>
                    <input type="text" class="form-control" id="modifiedDate" value="{{post.modifiedDate}}" readonly>
                </div>
                <div class="form-group">
                    <label for="view">조회수</label>
                    <input type="text" class="form-control" id="view" value="{{post.view}}" readonly>
                </div>
            </form>
            <a href="/" role="button" class="btn btn-primary">돌아가기</a>
            <a href="/posts/update/{{id}}" role="button" class="btn btn-success">수정</a>
            <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        </div>
    </div>
{{>layout/footer}}